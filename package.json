{
  "name": "hoodat-api",
  "version": "0.0.0",
  "description": "Backend API service for Hoodat mobile app",
  "main": "src/index.js",
  "scripts": {
    "build:routes": "mkdirp src/routes && npx tsoa routes",
    "build:swagger": "mkdirp api/dist && npx tsoa swagger",
    "build:ts": "tsc -p src",
    "build": "npm run build:routes && npm run build:swagger && npm run build:ts",
    "serve": "node dist/index.js",
    "format": "prettier --write src/",
    "start": "npm run build && npm run serve",
    "test": "jest"
  },
  "author": "Eric Weischedel",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "aws-sdk": "^2.782.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.10.1",
    "nodemailer": "^6.4.17",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.19",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.161",
    "@types/mongoose": "^5.10.2",
    "@types/node": "^14.0.13",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "jest": "^26.6.3",
    "mkdirp": "^1.0.4",
    "prettier": "^2.1.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsoa": "^3.2.1",
    "typescript": "^3.9.7"
  }
}
