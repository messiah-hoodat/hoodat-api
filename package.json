{
  "name": "hoodat-api",
  "version": "0.0.0",
  "description": "Backend API service for Hoodat mobile app",
  "main": "src/index.js",
  "scripts": {
    "build:routes": "mkdir -p src/routes && npx tsoa routes",
    "build:swagger": "mkdir -p api/dist && npx tsoa swagger",
    "build:ts": "npx tsc -p src",
    "build": "npm run build:routes && npm run build:swagger && npm run build:ts",
    "serve": "node dist/index.js",
    "start": "npm run build && npm run serve"
  },
  "author": "Eric Weischedel",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@types/mongoose": "^5.7.36",
    "@types/swagger-ui-express": "^4.1.2",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.1",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.0.13",
    "prettier": "2.1.2",
    "tsoa": "^3.2.1",
    "typescript": "^3.9.5"
  }
}
